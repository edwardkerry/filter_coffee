
<div class="registration-bg">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="log-in panel">
          <div class="panel-heading">
            <h2>Log in</h2>
            </div>

            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

              <div class="panel-body">
                <%= f.email_field :email, :class => 'panel', required: true, autofocus: true, label: false, placeholder: 'Email', input_html: { class: 'input-lg' } %>
              </div>

              <div class="panel-body">
                <%= f.password_field :password, :class => 'panel', autocomplete: "off", required: true, label: false, placeholder: 'Password', input_html: { class: 'input-lg' } %>
              </div>

              <% if devise_mapping.rememberable? -%>
                <div class="panel-body">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>

              <div class="panel-body">
                <%= f.submit "Log in", :class => 'btn btn-success sign-up' %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>

        </div>
      </div>
    </div>
  </div>
</div>



           
        