<% if @workspace.errors.any? %>
  <section id="errors" >
    <h2> <%= pluralize(@workspace.errors.count, "error") %> prohibited this workspace from being saved: </h2>
    <ul>
      <% @workspace.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </section>
<% end %>
<div class="add-place">
  <div class="container">
  
    <div class="row">
      
        <div class="col-md-4 col-md-offset-4">
          <div class="add-place-panel">
            <h2 class="section-heading place-title">Add A Place!</h2>
            <%= form_for Workspace.new do |f| %>
              <div class="panel-body">
                <%= f.text_field :name, :class => "panel", required: true, autofocus: true, label: false, placeholder: "Location Name", input_html: { class: "input-lg" } %>
              </div>
               <div class="panel-body">
                <%= f.submit :class => "btn btn-success add-place-button"  %>
              </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
